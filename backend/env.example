# ===============================================
# SISTEMA DENTAL MATCHING - VARIABLES DE ENTORNO
# ===============================================

# Configuración de la Base de Datos
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=tu_password_aqui
DB_NAME=dental_matching
DB_PORT=3306

# Configuración del Servidor
PORT=5000
NODE_ENV=development

# Configuración de Seguridad
JWT_SECRET=tu_jwt_secret_super_seguro_aqui
BCRYPT_ROUNDS=12

# Configuración de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Configuración de Logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuración de Email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_password_de_aplicacion

# Configuración de Notificaciones
NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATIONS_ENABLED=true

# Configuración de Matching
MATCHING_ALGORITHM_VERSION=2.0
AUTO_MATCHING_ENABLED=true
MATCHING_INTERVAL_MINUTES=30

# Configuración de Horarios
DEFAULT_CLINIC_HOURS_START=08:00
DEFAULT_CLINIC_HOURS_END=18:00
MAX_PATIENTS_PER_SLOT=5

# Configuración de Especialidades
ALLOWED_SPECIALTIES=Endodoncia,Operatoria Dental,Periodoncia,Cirugía Oral,Prótesis Fija,Prótesis Removible
ALLOWED_CLINICS=Clínica para el Niño y Adolescente,Clínica Integral Adulto y Gerontología
ALLOWED_DAYS=lunes,martes,miercoles,jueves,viernes,sabado

# Configuración de Validaciones
MIN_NAME_LENGTH=3
MAX_NAME_LENGTH=150
MIN_PHONE_LENGTH=9
MAX_PHONE_LENGTH=15
MIN_CASES_NEEDED=1
MAX_CASES_NEEDED=50

# Configuración de Desarrollo
DEBUG=true
VERBOSE_LOGGING=true
SHOW_SQL_QUERIES=false

# Configuración de Producción (cambiar en producción)
PRODUCTION_URL=https://tu-dominio.com
PRODUCTION_DB_HOST=tu-servidor-db.com
PRODUCTION_DB_USER=usuario_produccion
PRODUCTION_DB_PASSWORD=password_produccion_seguro
